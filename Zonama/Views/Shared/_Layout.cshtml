<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Zonama</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="bg-light">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-collapse collapse center-block">
                <ul class="nav navbar-na">
                    <li>@Html.ActionLink("Zonama", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                    @if (Session["Nom"] != null)
                    {
                        <li>@Html.ActionLink("Gérants", "Index", "Gerant", new { area = "" }, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("Employés", "Index", "Employe", new { area = "" }, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("Fournisseur", "Index", "Fournisseur", new { area = "" }, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("Produits", "Index", "Produit", new { area = "" }, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("Services", "Index", "Service", new { area = "" }, new { @class = "navbar-brand" })</li>
                        <li><a class="navbar-brand">@Session["Prenom"] @Session["Nom"]</a></li>
                        <li>@Html.ActionLink("Mon compte", "Details", "Gerant", new { id = Session["ID"] }, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("Deconnexion", "Deco", "Login", new { area = "" }, new { @class = "navbar-brand" })</li>
                    }
                    @if (Session["Nom"] == null)
                    {
                        <li>@Html.ActionLink("Connexion", "Index", "Login", new { area = "" }, new { @class = "navbar-brand" })</li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Day/@DateTime.Now.Month/@DateTime.Now.Year - Zonama</p>
        </footer>
    </div>

    <script src="~/FrontEnd/vendor/jquery/jquery.min.js"></script>
    <script src="~/FrontEnd/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/FrontEnd/js/grasp_mobile_progress_circle-1.0.0.min.js"></script>
    <script src="~/FrontEnd/vendor/jquery.cookie/jquery.cookie.js"></script>
    <script src="~/FrontEnd/vendor/chart.js/Chart.min.js"></script>
    <script src="~/FrontEnd/vendor/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/FrontEnd/vendor/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/FrontEnd/js/charts-home.js"></script>
    <script src="~/FrontEnd/monjs/Login.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
    </html>
