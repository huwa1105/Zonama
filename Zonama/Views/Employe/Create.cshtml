@model Zonama.Models.Employe

@if (Session["Nom"] != null)
{

    {
        ViewBag.Title = "Ajouter un employe";
    }

<h2>Ajouter un(e) employé(e)</h2>

using (Html.BeginForm())
{
@Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Ajouter un employe</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <p class="control-label col-md-2 text-uppercase font-weight-bold">Nom</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.nom, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nom, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2 text-uppercase font-weight-bold">Prénom</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.prenom, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.prenom, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2 text-uppercase font-weight-bold">Téléphone</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.tel, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.tel, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2 text-uppercase font-weight-bold">E-mail</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2 text-uppercase font-weight-bold">Date d'admission</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.date_adm, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.date_adm, "", new { @class = "text-danger" })
        </div>
    </div>
    <button type="submit" value="Create" class="btn btn-info text-white">
        Sauvegarder
    </button>
    <button type="submit" value="Delete" class="btn btn-info">
        @Html.ActionLink("Retour à la liste", "Index", new { area = "" }, new { @class = "text-white" })
    </button>
</div>
}
}

else
{
    <h3>Erreur! Veuillez vous @Html.ActionLink("connecter", "Index", "Login")</h3>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}